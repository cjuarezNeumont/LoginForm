<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.UserController">
   <children>
      <Label text="Survey Form" />
      <HBox>
         <children>
            <TextField fx:id="firstNameInput" text="First Name"/>
            <TextField fx:id="lastNameInput" text='Last Name' />
            <TextField fx:id="email" text='email'/>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      <Label text="Username" />
            <TextField fx:id="username" />
            <Label text="Password" />
            <TextField fx:id="password" />
      <Button fx:id="formSubmitButton" text="Submit Form" onAction="#submitForm" />
      <Button fx:id="primaryButton" text="Go Back Home" onAction="#switchToPrimary"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
